<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/jamarat"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <com.github.lzyzsd.circleprogress.ArcProgress
            android:id="@+id/etage4"
            android:layout_marginTop="40dp"
            android:layout_width="110dp"
            android:layout_height="110dp"
            custom:arc_progress="12"
            app:arc_unfinished_color="#a9a7a7"
            app:arc_text_color="@color/white"
            app:arc_finished_color="@color/white"
            app:arc_text_size="30dp"
            app:arc_suffix_text=" "
            app:arc_stroke_width="4dp"
            app:arc_suffix_text_padding="10dp"
            custom:arc_bottom_text="4 floor"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">
            <com.github.lzyzsd.circleprogress.ArcProgress
                android:id="@+id/etage3"
                android:layout_marginTop="10dp"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:layout_marginRight="10dp"
                custom:arc_progress="59"
                app:arc_unfinished_color="#a9a7a7"
                app:arc_text_color="@color/white"
                app:arc_finished_color="@color/white"
                app:arc_text_size="30dp"
                app:arc_stroke_width="3dp"
                app:arc_suffix_text=" "
                app:arc_suffix_text_padding="1dp"
                custom:arc_bottom_text="3 floor"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">
            <com.github.lzyzsd.circleprogress.ArcProgress
                android:id="@+id/etage2"
                android:layout_marginTop="10dp"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:layout_marginRight="10dp"
                custom:arc_progress="89"
                app:arc_unfinished_color="#a9a7a7"
                app:arc_text_color="@color/white"
                app:arc_finished_color="@color/white"
                app:arc_text_size="30dp"
                app:arc_stroke_width="3dp"
                app:arc_suffix_text=" "
                app:arc_suffix_text_padding="1dp"
                custom:arc_bottom_text="2 floor"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">
            <com.github.lzyzsd.circleprogress.ArcProgress
                android:id="@+id/etage1"
                android:layout_marginTop="10dp"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:layout_marginRight="10dp"
                custom:arc_progress="67"
                app:arc_unfinished_color="#a9a7a7"
                app:arc_text_color="@color/white"
                app:arc_finished_color="@color/white"
                app:arc_text_size="30dp"
                app:arc_stroke_width="3dp"
                app:arc_suffix_text=" "
                app:arc_suffix_text_padding="1dp"
                custom:arc_bottom_text="1 floor"
                />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:background="@color/white"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"

            android:orientation="horizontal">

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>